<script>

  document.addEventListener('DOMContentLoaded', function () {
    var calendarEl = document.getElementById('calendar');

    var calendar = new FullCalendar.Calendar(calendarEl, {
      plugins: ['moment', 'dayGrid', 'timeGrid', 'list', 'interaction'],
      defaultView: 'timeGridWeek',
      nowIndicator: true,
      fixedWeekCount: true,
      allDaySlot: false,
      minTime: "08:00:00",
      maxTime: "20:00:00",
      slotDuration: "00:05:00",
      defaultDate: "2019-07-12",
      editable: false,
      navLinks: true,
      eventLimit: false,
      hiddenDays: [0, 6],
      noEventsMessage: 'No bookings to display',
      eventTimeFormat: {
        hour: '2-digit',
        minute: '2-digit',
        hour12: false
      },
      slotLabelFormat: {
        hour: '2-digit',
        minute: '2-digit',
        hour12: false
      },
      views: {
        week: {
          titleFormat: 'DD/MM'
        }
      },
      buttonText: {
        timeGrid: 'day'
      },
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'timeGridWeek,timeGrid,listWeek,dayGridMonth'
      },
      loading: function (bool) {
        $('#div_cargando').toggle(bool);
      },
      events: {
        url: '/rooms/<%=@room.id%>.json?only_bookings=1',
        error: function () {
          $('#script-warning').show();
        }
      },
      eventMouseEnter: function (mouseEnterInfo) {
        console.log(mouseEnterInfo.el.innerHTML);
        console.log(mouseEnterInfo.event.title);
      },
      /*
            validRange: {
              start: '2019-07-12',
              end: '2019-07-31'
            },
      */
      selectable: true,

      selectMirror: true,

      viewSkeletonRender: function (info) {
        if (calendar.view.type == 'dayGridMonth' && calendar.getOption('selectable') == true) {
          calendar.setOption('selectable', false);
        } else if (calendar.view.type != 'dayGridMonth' && calendar.getOption('selectable') == false) {
          calendar.setOption('selectable', true);
        }
      },

      selectOverlap: function (event) {
        return event.rendering === 'background';
      },

      selectAllow: function (selectInfo) {
        if (selectInfo.start < new Date() || selectInfo.start.getDate() != selectInfo.end.getDate()) {
          alert("You can't book in the past.")
          return false;
        }
        return true;
      },

      select: function (info) {
        alert('selected ' + info.startStr + ' to ' + info.endStr);
      },

      dateClick: function (info) {
        if (info.allDay) {
          calendar.changeView('timeGridDay');
          calendar.gotoDate(info.date);
        } else {
          // alert("Please select a time range with the mouse.");
        }
      },

      eventClick: function (calEvent, jsEvent, view) {
        location.replace('/mis_turnos/turno_' + calEvent.id + '/');
        // alert('Muestro info del turno ' + calEvent.id);
      },

      eventRender: function (info) {
        if (info.event.extendedProps.icon) {
          if (info.el.querySelector('.fc-title') != null) {
            info.el.querySelector('.fc-title').innerHTML = '<i class="fas fa-' + info.event.extendedProps.icon + '"></i>&nbsp;' + info.event.title;
          }
        }
      },


    });
    calendar.render();
  });


</script>

<style>
  #div_cargando {
    position: fixed;
    z-index: 999;
    height: 2em;
    width: 2em;
    overflow: visible;
    margin: auto;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }

  #div_cargando:before {
    content: '';
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
  }

  #script-warning {
    display: none;
    background: #eee;
    border-bottom: 1px solid #ddd;
    padding: 0 10px;
    line-height: 40px;
    text-align: center;
    font-weight: bold;
    font-size: 12px;
    color: red;
  }

  #calendar {
    max-width: 650px;
    margin: 20px auto;
    padding: 0 10px;
    font-size: 14px;
  }

  @media only screen and (max-width: 600px) {
    #calendar H2 {
      margin-top: 20px;
    }
  }
</style>