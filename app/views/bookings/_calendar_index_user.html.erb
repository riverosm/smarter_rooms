<script>
  var calendar;
  $(document).ready(function () {

    var calendarEl = document.getElementById('calendar');
    calendar = new FullCalendar.Calendar(calendarEl, {
      plugins: ['moment', 'dayGrid', 'timeGrid', 'list', 'interaction'],
      defaultView: 'listWeek',
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'listWeek,timeGrid,timeGridWeek,dayGridMonth'
      },
      nowIndicator: true,
      fixedWeekCount: true,
      allDaySlot: false,
      minTime: "<%= Rails.configuration.smarter_rooms_calendar_start_time %>",
      maxTime: "<%= Rails.configuration.smarter_rooms_calendar_end_time %>",
      slotDuration: "<%= Rails.configuration.smarter_rooms_calendar_slot_duration %>",
      hiddenDays: "<%= Rails.configuration.smarter_rooms_calendar_hidden_days %>",
      defaultDate: "<%= DateTime.now.strftime('%Y-%m-%d') %>",
      editable: false,
      navLinks: true,
      eventLimit: false,
      noEventsMessage: 'No bookings to display',
      eventTimeFormat: {
        hour: '2-digit',
        minute: '2-digit',
        hour12: false
      },
      slotLabelFormat: {
        hour: '2-digit',
        minute: '2-digit',
        hour12: false
      },
      eventLimit: true,
      views: {
        week: {
          titleFormat: 'DD/MM'
        }
      },
      buttonText: {
        timeGrid: 'day'
      },
      loading: function (bool) {
        $('#div_calendar_loading').toggle(bool);
      },
      events: {
        url: '<%= url %>&dates=7',
        error: function () {
          $('#script-warning').show();
        }
      },
      eventMouseEnter: function (mouseEnterInfo) {
        // console.log(mouseEnterInfo.el.innerHTML);
        // console.log(mouseEnterInfo.event.title);
      },

      dateClick: function (info) {
        if (info.allDay) {
          calendar.changeView('timeGridDay');
          calendar.gotoDate(info.date);
        }
      },

      eventRender: function (info) {
        if (info.event.extendedProps.can_delete) {
          can_delete_text = '<a data-confirm="Do you want to cancel this booking?" rel="nofollow" data-method="delete" href="/bookings/' + info.event.extendedProps.can_delete +
            '"><i class="fas fa-trash text-danger" data-toggle="tooltip" data-original-title="Delete booking" data-placement="top"></i>' +
            '</a>&nbsp;&nbsp;' + info.event.title;
            
          if (info.el.querySelector('.fc-title') != null) {
            info.el.querySelector('.fc-title').innerHTML = can_delete_text;
          }

          if (info.el.querySelector('.fc-list-item-title') != null) {
            info.el.querySelector('.fc-list-item-title').innerHTML = can_delete_text;

          }
        }
      },
    });
    calendar.render();
  });

  function getBookings() {
    var firstEventSource = calendar.getEventSources()[0];
    if (firstEventSource) {
      console.log(firstEventSource.url);
      firstEventSource.remove();
    }
    calendar.addEventSource(
        '<%= url %>' +
        '&room_id=' + $('#room_id').children("option:selected").val() +
        '&dates=' + $('#dates').children("option:selected").val() +
        '&building_id=' + $('#building_id').children("option:selected").val());
    calendar.refetchEvents();
  }


</script>

<style>
  #div_calendar_loading {
    position: fixed;
    z-index: 999;
    height: 2em;
    width: 2em;
    overflow: visible;
    margin: auto;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
  }

  #div_calendar_loading:before {
    content: '';
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
  }

  #script-warning {
    display: none;
    background: #eee;
    border-bottom: 1px solid #ddd;
    padding: 0 10px;
    line-height: 40px;
    text-align: center;
    font-weight: bold;
    font-size: 12px;
    color: red;
  }

  #calendar {
    max-width: 750px;
    margin: 20px auto;
    padding: 0 10px;
    font-size: 14px;
  }

  @media only screen and (max-width: 600px) {
    #calendar H2 {
      margin-top: 20px;
    }
  }
</style>