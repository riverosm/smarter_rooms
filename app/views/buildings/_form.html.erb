<%= form_with model: @building, local: true, class: "forms" do |f| %>

<%= render partial: "form_label", locals: {required: true, field: :name,  fa_icon: 'building',
                                           placeholder: 'Name', type: 'text', form: f} %>

<%= render partial: "form_label", locals: {required: true, field: :address,  fa_icon: 'map-pin',
                                           placeholder: 'Address', type: 'text', form: f} %>

<%= render partial: "form_label", locals: {required: true, field: :latitude,  fa_icon: 'compass',
                                           placeholder: 'Latitude', type: 'float', form: f} %>

<%= render partial: "form_label", locals: {required: true, field: :longitude,  fa_icon: 'compass',
                                           placeholder: 'Longitude', type: 'float', form: f} %>

<%= content_tag :div, class: "input-group mb-3 row" do %>
<%= content_tag :div, class: "col" do %>
<%= link_to 'Back', buildings_path, :class => "btn btn-outline-secondary btn-block btn-lg"%>
<% end %>
<%= content_tag :div, class: "col" do %>
<% if action == "new" %>
<%= f.submit :"Create site", class: "btn-outline-success btn btn-block btn-lg" %>
<% else %>
<%= f.submit :"Change site", class: "btn-outline-warning btn btn-block btn-lg" %>
<% end %>
<% end %>
<% end %>

<% end %>