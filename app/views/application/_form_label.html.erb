<%= content_tag :div, class: "input-group mb-3 row" do %>
<%= content_tag :div, class: "input-group-prepend" do %>
<%= content_tag :span, class: "input-group-text" do %>
<%= icon('fas', fa_icon, class: 'fa-fw') %>
<% end %>
<% end %>
<%=
if !local_variables.include?(:max)
  max = 1000
end
if !local_variables.include?(:min)
  min = 1
end
case type
  when "text"
    form.text_field field, :required => required, placeholder: placeholder, class: "form-control"
  when "email"
    form.email_field field, :required => required, placeholder: placeholder, class: "form-control"
  when "password"
    form.password_field field, :required => required, placeholder: placeholder, class: "form-control"
  when "number"
    form.number_field field, :required => required, placeholder: placeholder, class: "form-control", step: :any, min: min, max: max
end
%>
<% end %>