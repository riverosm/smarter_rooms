<%= content_tag :div, class: "alert alert-#{message_type} alert-white rounded mb-3 fade show", id: "alert-general" do %>
<%= content_tag :div, class: "icon" do %>
<% if message_type == "danger" %>
<%= icon('fas', 'times-circle') %>
<% elsif message_type == "success" %>
<%= icon('fas', 'check-circle') %>
<% elsif message_type == "info" %>
<%= icon('fas', 'info-circle') %>
<% else %>
<%= icon('fas', 'exclamation-circle') %>
<% end %>
<% end %>
<%= sanitize(message) %>
<% end %>

<script>
  setTimeout(function () { $("#alert-general").alert('close'); }, 3000);
</script>