<%= content_tag :div, class: "row justify-content-md-center text-center mt-4" do %>
<% if view_path != "" %>
<%= content_tag :div, class: "col mt-1" do %>
<%= link_to icon('fas', 'eye', class: 'mr-2') + 'View all', view_path, :class => "btn btn-outline-secondary btn-block btn-sm"%>
<% end %>
<% end %>
<% if new_path != "" %>
<%= content_tag :div, class: "col mt-1" do %>
<%= link_to icon('fas', 'plus', class: 'mr-2') + 'Add ' + create_text, new_path, :class => "btn btn-outline-success btn-block btn-sm"%>
<% end %>
<% end %>
<% end %>