<%= content_tag :div, class: "row justify-content-md-center text-center home_admin" do %>

<%= content_tag :div, class: "col-sm-3 mt-1" do %>
<%= content_tag :div, class: "card" do %>
<%= content_tag :h5, class: "card-header" do %>
Users
<% end %>
<%= content_tag :div, class: "card-body centered" do %>
<% view_path = users_path %>
<% if (@total_users) > 0 %>
Created users: <br />
<b><%= @total_users %></b>
<%= pie_chart({"User's" => @cant_users, "Admin's" => @cant_admin}, height: "280px", legend: "bottom", colors: ["#008B8B", "#20B2AA"]) %>
<% else %>
<% view_path = "" %>
<%= render partial: "alert_box", locals: {message_type: "info", message: "No users yet.", hide_alert: false} %>
<% end %>
<%= render partial: "action_buttons", locals: {create_text: 'user', view_path: view_path, new_path: new_user_path} %>
<% end %>
<% end %>
<% end %>

